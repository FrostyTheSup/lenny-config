battery_level {
	battery_id=all
	threshold_bad = 5
	threshold_degraded = 15
	blocks = "_▁▂▃▄▅▆▇█"
	format = "{percent}% {time_remaining} {icon}"
	hide_seconds = True
	notify_low_level = True
	cache_timeout = 30
}

